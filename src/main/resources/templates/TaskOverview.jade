doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    title TMProject
  body
    nav
        div
            a(href='/TMProject/Project?id='+task.project+'&user='+encodedUsername) ⬅︎ Project Overview
            p user: #{username}
            p earned points: #{totalPoints}

    .Topic
        h1 #{task.name}
    .table
      .innerTable
        p Deadline: #{task.deadline}
        p Time needed: #{task.timeEstimation} hours
        p Priority: #{task.priority}/10
        p Maximum Points: #{task.maxPoints}
        p Responsible Person: #{responsiblePerson}
        .finish
        form#done(method="POST", action="/TMProject/CheckOfTask?task="+task.id+"&user="+encodedUsername)
          label(for="check") done:
          input(type='checkbox', id="check", name='done', checked=task.done)
          input(type="submit" value="submit", class="submit")

  style.
      @import url(https://fonts.googleapis.com/css?family=Roboto:300);
      html,
      body {
      min-height: 100%;
      }
      body {
          font-family: "Roboto", sans-serif;
          color: white;
          background: rgb(115, 194, 251);
          background: linear-gradient(rgba(115, 194, 251, 1) 5%, rgba(178, 221, 233, 1) 100%);
      }

      nav {
          display: flex;
          background-color: rgb(105, 191, 252);
          justify-content: space-between;
          align-items: center;
          color: #fff;
          height: 50px;
          width: 100%;
          box-shadow: 1px 1px 10px rgb(100, 100, 100);
          border-radius: 7px;
      }
      nav div {
          display: flex;
          width: 100%;
          padding: 15px;
          align-items: center;
          justify-content: space-between;
      }
      nav div a {
          text-decoration: none;
          color: white;
      }
      nav div a:hover {
          transition: 0.5s ease;
          transform: scale(1.15);
          text-shadow: 0 0 5px gray;
      }

      .Topic {
          display: flex;
          font-size: 20px;
          justify-content: center;
          text-shadow: 5px 5px 10px gray;
      }

      p {
      font-weight: bold;
      }

      .table {
          display: flex;
          flex-direction: column;
          align-items: center;
          border-radius: 7px;
          min-height: 80vh;
          text-shadow: 0 1.5px 5px gray;
      }

      .innerTable {
      width: 35vh;
      padding: 20px;
      border-radius: 10px;
      display: flex;
      align-items: center;
      flex-flow: column;
      text-align: center;
      background-color: rgb(157, 211, 249);
      box-shadow: 1px 1px 10px rgb(100, 100, 100);
      }

      .finish {
      display: flex;
      flex-direction: row;
      }
  